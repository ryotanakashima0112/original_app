<div class="search" style="margin-bottom: 50px;">
  <div class="row">
    <div class="text-center">
      <%= form_tag(new_search_path, method: :get,  class: 'form-inline') do %>
        <div class="form-group">
          <span style="font-size: 20px; padding-right: 30px;">検索する相手の強さを選んでください</span>
          <%= select_tag :search, options_for_select([["弱い", 0], ["普通", 1], ["強い", 2]]), class: 'form-control input-lg', size: 40 %>
        </div>
        <div style="padding-top: 15px;">
          <%= submit_tag 'デュエリストを探す', class: 'btn btn-success btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render 'search', users: @users %>
