<div class="text-center">
  <h3><%= "トークルーム名:    " + @room.name %></h3>
</div>

<div class="row">
  <div>
    <%= render 'comments/comments', comments: @comments %>
  </div>
  <div>
    <%= form_for(@comment) do |f| %>
      <div class="form-group">
        <%= f.label :content, "投稿内容" %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= hidden_field_tag :from_id, current_user.id, class: 'form-control'%>
      </div>
      <div class="form-group">
        <%= hidden_field_tag :to_id, @user.id, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= hidden_field_tag :room_id, @room.id, class: 'form-control' %>
      </div>
      <%= f.submit '送信', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
